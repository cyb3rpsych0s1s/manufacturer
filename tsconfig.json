{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["esnext","esnext.asynciterable","dom","es2015","es2016","es2017","es2018"],
    "types" : ["node", "@types/jest", "@types/joi", "@types/mongoose","@nuxt/types","@nuxt/vue-app","@nuxtjs/vuetify"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/seeds/**",
    "src/generate/**",
    "**/*.stories.[tj]s",
    "node_modules",
    "dist"
  ]
}