{
  "compilerOptions": {
    "rootDir": "src/app",
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["esnext","esnext.asynciterable","dom","es2015","es2016","es2017","es2018"],
    "types" : ["node", "@types/jest", "@nuxt/types","@nuxt/vue-app","@nuxtjs/vuetify"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "lib",
    "dist",
    "nuxt.config.ts",
    "**/*.stories.[tj]s",
    "src/server/**"
  ]
}